<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_toolbar"
            layout="@layout/layout_toolbar"/>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/margin10">

                <ImageView
                    android:id="@+id/image_complaint_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin200"
                    android:scaleType="fitXY"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5">

                    <TextView
                        android:id="@+id/text_complaint_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/text_complaint_detail_status"
                        android:text="NA"
                        android:textColor="@color/textHeading"
                        android:textSize="@dimen/textsize16"/>

                    <TextView
                        android:id="@+id/text_complaint_detail_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/margin5"
                        android:background="@drawable/rounded_light_green"
                        android:paddingBottom="@dimen/margin3"
                        android:paddingLeft="@dimen/margin15"
                        android:paddingRight="@dimen/margin15"
                        android:paddingTop="@dimen/margin3"
                        android:text="NA"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize12"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/text_complaint_detail_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin2"
                    android:text="NA"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/textsize12"/>

                <TextView
                    android:id="@+id/text_complaint_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5"
                    android:text="NA"
                    android:textColor="@color/textDescription"
                    android:textSize="@dimen/textsize14"/>

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
</layout>