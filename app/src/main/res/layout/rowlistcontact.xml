<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listRalative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin8">

    <TextView
        android:id="@+id/txtContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:textSize="@dimen/textsize16" />

    <CheckBox
        android:id="@+id/checkContactCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_number"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtContactName"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin10" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtContactName"
        android:layout_below="@+id/txtContactName"
        android:layout_marginTop="@dimen/margin5"
        android:textSize="@dimen/textsize16" />

</RelativeLayout>